.modal-content
  .modal-header
    %h1
      = task.new_record? ? 'New Task' : "Editing task #{task.title}"
  = simple_form_for task, class: 'clearfix', remote: true do |f|
    .modal-body
      = f.input :title
      = f.input :note
      = f.input :completed
    .modal-footer
      = f.submit 'Save', class: 'btn btn-primary'